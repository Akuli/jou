# Test constant declarations

# Basic constant declaration
const foo: int = 42

# Different types
const str: byte* = "hello"
const num: float = 3.14
const flag: bool = true

# Using constants in expressions
const a: int = 10
const b: int = 20
const sum: int = a + b

# Constants with different numeric types
const small: byte = 255 as byte
const medium: int = 1000
const large: long = 1000000

def main() -> int:
    printf("foo = %d\n", foo)
    printf("str = %s\n", str)
    printf("num = %f\n", num)
    printf("flag = %d\n", flag)
    printf("sum = %d\n", sum)
    printf("small = %d\n", small)
    printf("medium = %d\n", medium)
    printf("large = %lld\n", large)
    return 0
