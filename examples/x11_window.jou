if NETBSD:
    link "-L/usr/X11R7/lib -Wl,-R/usr/X11R7/lib"
link "-lX11"

declare usleep(x: int) -> int

class Display:
    pass
class XGCValues:
    pass
class GC:
    pass

declare XOpenDisplay(name: byte*) -> Display*
declare XCreateSimpleWindow(
    display: Display*,
    parent: int64,
    x: int,
    y: int,
    width: int,
    height: int,
    border_width: int,
    border: int64,
    background: int64,
) -> int64
declare XCreateGC(display: Display*, drawable: int64, valuemask: int64, values: XGCValues*) -> GC*
declare XSetForeground(display: Display*, gc: GC*, foreground: int64) -> int
declare XSelectInput(display: Display*, window: int64, event_mask: int64) -> int
declare XMapRaised(display: Display*, window: int64) -> int
declare XDrawImageString(
    display: Display*,
    drawable: int64,
    gc: GC*,
    x: int,
    y: int,
    string: byte*,
    length: int,
) -> int
declare XDefaultRootWindow(display: Display*) -> int64
declare XStoreName(display: Display*, window: int64, name: byte*) -> int
declare XFlush(display: Display*) -> int

def main() -> int:
    display = XOpenDisplay("")
    window = XCreateSimpleWindow(display, XDefaultRootWindow(display), 200, 200, 200, 200, 5, 0, 0xff00ff)
    XStoreName(display, window, "Hello pink world")

    gc = XCreateGC(display, window, 0, NULL)
    XSetForeground(display, gc, 0xffffff)

    XSelectInput(display, window, 32768)
    XMapRaised(display, window)

    while True:
        usleep(100)
        XDrawImageString(display, window, gc, 50, 50, "hello", 5)
        XFlush(display)  # This makes the program die when closed. Don't know why :)
