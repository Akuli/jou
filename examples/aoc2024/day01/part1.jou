import "stdlib/io.jou"
import "stdlib/math.jou"
import "stdlib/sort.jou"


def main() -> int:
    f = fopen("sampleinput.txt", "r")
    assert f != NULL

    left_column, right_column: int[2000]
    n = 0
    while fscanf(f, "%d %d", &left_column[n], &right_column[n]) == 2:
        n++
        assert n < 2000

    fclose(f)

    sort_int32(left_column, n)
    sort_int32(right_column, n)

    result: int64 = 0
    for i = 0; i < n; i++:
        result += abs(left_column[i] - right_column[i])
    printf("%lld\n", result)  # Output: 11

    return 0
