# Color IO
import "stdlib/io.jou"

def str_set_color(str: bytes*) -> void:
    printf("%s", str)

def set_color(value: int) -> void:
    printf("\x1b[%dm", value)

def reset_color() -> void:
    printf("\x1b[0m")

def clear_line() -> void:
    printf("\x1b[2K")

def clear_screen() -> void:
    printf("\x1b[2J")
